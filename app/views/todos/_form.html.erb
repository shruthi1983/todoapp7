
<div class = "container">
<%= form_with model: @todo do |f| %>
  <div class= "form-group">
	
    <%= f.text_field :task ,class: 'form-control' , placeholder: 'Task'%><br>
  </div>
  <div class= "form-group">
	
  <%= f.datetime_field :completed, class: 'form-control' ,placeholder: 'Created_date' %>
  </div>
  <br>
    <div class= "form-group">
     <%= f.submit 'submit',class: 'btn btn-default btn-primary' %></div><br>
<% end %>
</div>
